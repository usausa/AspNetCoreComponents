@model ExampleQrForm
@{
    ViewData["Title"] = "QR";
}

<div class="row">
    <form method="post" asp-antiforgery="true">
        <div class="form-group" app-validation-for="Barcode" app-validationerror-class="has-error">
            <label asp-for="Barcode">Barcode</label>
            <div>
                <textarea type="text" asp-for="Barcode" class="form-control" rows="5" cols="80"></textarea>
                <span asp-validation-for="Barcode" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-check"></i> Update
                </button>
            </div>
        </div>
        <div if="@(!String.IsNullOrEmpty(Model?.Barcode))" class="form-group">
            <qrcode height="320" width="320" content="@Model.Barcode" />
        </div>
    </form>
</div>
